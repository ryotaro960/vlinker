<div class='header-contents'>
  <%= link_to image_tag("vlinker_logo.jpeg", class:"vlinker-logo"), root_path %>
  <ul class ='lists-left'>
    <li><%= link_to '動画検索', "#", class: "search-bt" %></li>
    <li><%= link_to 'VTuber検索', "#", class: "search-bt" %></li>
    <% if user_signed_in? %>
      <li><%= link_to '新規投稿', new_post_path, class: "search-bt" %></li>
    <% end %>
  </ul>

  <ul class='lists-right'>
    <% if user_signed_in? %>
      <% if current_user.user_image.attached? %>
         <li><%= link_to image_tag(current_user.user_image, class:"user-image"), root_path %></li>  
      <% else %>
         <li><%= link_to image_tag("user_icon.jpeg", class:"user-image"), root_path %></li>
      <% end %>
      <li><%= link_to current_user.nickname, "#", class: "user-manage"%> </li> 
      <li><%= link_to 'ログアウト', destroy_user_session_path , data: {turbo_method: :delete}, class: "user-manage" %></li>
    <% else %>
      <li><%= link_to 'ログイン', new_user_session_path, class: "user-manage"%></li> 
      <li><%= link_to '新規登録', new_user_registration_path, class: "user-manage"%></li> 
    <% end %>
  </ul>
</div>